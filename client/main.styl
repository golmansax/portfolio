@require 'nib'
@require 'jeet'

$lambda = 1.5
$container-scale = 40
$container-width = unit($container-scale * $lambda, em)
jeet['gutter'] = 100 / 40 * 2 // this is a percentage, to be 2 * $lambda

e(name) {
  &__{name} {
    {block}
  }
}

m(name) {
  &--{name} {
    {block}
  }
}

// Colors
$main-color = #001C3C // Prussian
$secondary-color = #EA0029 // Ruby
$darker-gray = #555
$dark-gray = lighten($darker-gray, 30%)
$light-gray = #bbb
$white = #F2F2F2 // Titanium
$header-ratio = 1.25

// Borders
$colored-border = 1px $main-color solid
$muted-border = 1px $light-gray solid

$h1-lambda = $header-ratio ** 3
$h2-lambda = $header-ratio ** 2
$h3-lambda = $header-ratio

html,
body {
  box-sizing border-box
  height 100%
}

*, // @stylint ignore
*:before, // @stylint ignore
*:after { // @stylint ignore
  box-sizing inherit
}

body {
  font-family 'Outfit', sans-serif
  font-size 100%
  line-height $lambda
  color $dark-gray
  background-color $main-color
}

.content {
  background-color $white
  min-height 100%
}

h1,
h2,
h3,
p,
dl,
dd,
ul {
  margin 0
  padding 0
}

h1,
h2,
h3 {
  color $darker-gray
}

h1 {
  font-size unit($h1-lambda, em)
  font-weight bold
  line-height (($lambda * 3) / $h1-lambda)
}

h2 {
  font-size unit($h2-lambda, em)
  font-weight bold
  line-height (($lambda * 1.5) / $h2-lambda)
  margin unit($lambda / $h2-lambda / 2, em) 0
}

h3() {
  font-size unit($h3-lambda, em)
  line-height ($lambda / $h3-lambda)
  margin unit($lambda / $h3-lambda / 2, em) 0
}

h3 {
  h3()
}

hr {
  border-color $main-color
  border-top 0
}

em {
  font-style italic
}

img {
  vertical-align top // or else image gets added padding on bottom
}

a {
  color $main-color
  cursor pointer
  text-decoration underline

  &:hover {
    color darken($main-color, 30%)
  }
}

.clearfix {
  clearfix()
}

