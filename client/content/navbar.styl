$navbar-lambda = 3 * $lambda

.navbar {
  height unit($navbar-lambda, em)
  position relative

  +e(menu) {
    position absolute
    top unit($navbar-lambda, em)
    right 0
    border-left $colored-border
    background: $white

    a {
      display block
      padding unit($lambda / 2, em) unit($lambda, em)
      border-bottom $colored-border
      text-decoration none

      &.active {
        text-decoration underline
      }
    }
  }

  +e(sidebar-trigger) {
    background inherit
    border 0
    float right
    height unit($navbar-lambda, em)
    padding 0 unit($navbar-lambda / 4, em)
    margin-right -1 * unit($navbar-lambda / 4, em)

    +above('l') {
      display none
    }
  }

  +e(sidebar-trigger-icon) {
    font-size unit($navbar-lambda / 3, em)
  }
}

.navbar-left {
  float left

  a {
    clearfix()
  }

  img,
  h1 {
    float left
  }

  img {
    $img-lambda = 2 * $lambda
    $img-width = unit($img-lambda, em)

    height $img-width
    margin unit(($navbar-lambda - $img-lambda) / 2, em)
    margin-left 0
    width $img-width
  }
}

.navbar-right {
  float right
  line-height $navbar-lambda

  a {
    margin 0 unit($lambda, em)
    text-transform uppercase
    text-decoration none

    &:hover {
      text-decoration underline
    }

    &.active {
      text-decoration underline
    }

    &:last-child {
      margin-right 0
    }
  }

  +below('m') {
    display none
  }
}
