@require 'font-awesome-stylus/stylus/mixins'
@require 'font-awesome-stylus/stylus/variables'

.content-footer {
  +e(bottom) {
    margin-top unit(2 * $lambda, em)
    background-color $main-color
    color $white
    padding 3em 0 6em

    h2 {
      margin 0
    }

    h2,
    a {
      color $white
    }
  }

  +e(large-section) {
    +above('l') {
      span(1/2)
    }

    small {
      display inline-block
      font-size 65%
      font-weight normal
    }
  }

  +e(section) {
    margin-top unit($lambda, em)
    padding-right unit($lambda, em)

    +above('l') {
      span(1/4)
      margin-top 0
    }
  }

  +e(section-heading) {
    font-weight bold
  }

  +e(main-links) {
    a {
      display block
    }
  }
}
